{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./js/"],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "main-build"
    },
    "plugins"   : ["plugins/markdown"],
    "templates" : {
        "cleverLinks"     : false,
        "monospaceLinks"  : false,
        "default"         : {
            "outputSourceFiles" : true
        },
        "systemName"      : "Dexter",
        "footer"          : "",
        "copyright"       : "",
        "navType"         : "inline",
        "theme"           : "readable",
        "linenums"        : true,
        "collapseSymbols" : false,
        "inverseNav"      : true
    },
    "markdown"  : {
        "parser"   : "gfm",
        "hardwrap" : true
    },
    "opts": {
        "template": "docs/template",
        "encoding": "utf8",
        "destination": "docs/html",
        "recurse": true,
        "private": true
    }
}
